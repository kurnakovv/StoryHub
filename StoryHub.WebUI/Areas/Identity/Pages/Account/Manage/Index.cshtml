@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = "Index";
}
<link rel="stylesheet" href="~/css/PersonalStyles/RegisterStyles.css">
<link rel="stylesheet" href="~/css/PersonalStyles/AccountManageStyles.css">

<partial name="_StatusMessage" model="Model.StatusMessage" />
<form class="Form" id="profile-form" method="post" enctype="multipart/form-data">
    <!-- Стилизовать сообщение об успешном изменении аккаунта. -->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="Form-inputContainer">
        <div class="imageContainer">
            <img src="~/imagesStorytellers/@Model.Input.Image" alt="UserLogo">
        </div>
        <label asp-for="Input.Image" class="fileLabel" for="imageFile">New avatar? (click me)</label>
        <input asp-for="Input.Image" class="inputFile" id="imageFile" type="file" name="files">
        <span asp-validation-for="Input.Image" class="field-validation-valid"></span>
    </div>
    <div class="Form-inputContainer">
        <label asp-for="Input.About" for="Input_About">About</label>
        <input asp-for="Input.About" class="form-control" id="Input_About">
    </div>
    <div class="Form-inputContainer">
        <label asp-for="Input.Gender" for="Input_Gender">Gender</label>
        <input asp-for="Input.Gender" class="form-control" id="Input_Gender">
    </div>
    <div class="Form-inputContainer">
        <label asp-for="Input.Age" for="Input_Age">Age</label>
        <input asp-for="Input.Age" class="form-control" id="Input_Age">
    </div>
    <div class="Form-inputContainer">
        <label asp-for="Input.PhoneNumber" for="Input_PhoneNumber">Phone number</label>
        <input asp-for="Input.PhoneNumber" class="form-control" id="Input_PhoneNumber">
    </div>
    <button class="submitButton" id="update-profile-button" type="submit">
        Update my account
    </button>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}